{% extends 'base.html' %}
{% block content %}
<div class="text-center">
<img src="{{url_for('static',filename='Pokemon-logo.jpg')}}" alt="pokemon logo">
</div>

<form action="/pokemon" method="POST">
  <div class="mb-3">
    <label for="pokemon" class="form-label">Pokemon name</label>
    <input type="text" name = "pokemon" class="form-control" id="pokemon">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    {% if error %}
        <small style="color:red;">{{error}}</small>
    {% else %}
        <small>There was no error</small>
    {% endif %}
    {% if pokemon %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                <th scope="col">Pokemon name</th>
                <th scope="col">Ability</th>
                <th scope="col">Base Experience</th>
                <th scope="col">Sprite URL</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">{{pokemon['pokemon_name']}}</th>
                <td>{{pokemon['ability_name']}}</td>
                <td>{{pokemon['base_experience']}}</td>
                <td><a href={{pokemon['sprite_ULR']}}>{{pokemon['sprite_ULR']}} </a></td>
                </tr>
            </tbody>
        </table>
    {% endif %}

{% endblock %}